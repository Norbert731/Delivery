@model Delivery.Models.AutomatPaczkowy

@{
    ViewData["Title"] = "Automat Paczkowy Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Automat Paczkowy</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.ID_automat</dd>

        <dt class="col-sm-2">Lokalizacja</dt>
        <dd class="col-sm-10">@Model.Lokalizacja</dd>
    </dl>
</div>

<!-- Delete Button -->
<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.ID_automat" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "AutomatPaczkowy")" class="btn btn-secondary">Back to List</a>
</form>
