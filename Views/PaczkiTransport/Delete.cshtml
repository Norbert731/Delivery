@model Delivery.Models.PaczkiTransport

@{
    ViewData["Title"] = "Delete Paczki Transport";
}

<h2>Delete Paczki Transport</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Paczki Transport</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Transport ID</dt>
        <dd class="col-sm-10">@Model.Transport?.ID_transport</dd>

        <dt class="col-sm-2">Paczka ID</dt>
        <dd class="col-sm-10">@Model.Paczka?.ID_paczki</dd>

        <dt class="col-sm-2">Rozmiar</dt>
        <dd class="col-sm-10">@Model.Paczka?.Rozmiar</dd>

        <dt class="col-sm-2">Data Odbioru</dt>
        <dd class="col-sm-10">@Model.DataOdbioru.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Data Oddania</dt>
        <dd class="col-sm-10">@Model.DataOddania.ToString("yyyy-MM-dd")</dd>
    </dl>

    <!-- Form to confirm deletion -->
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()

        <!-- Pass the ID of the PaczkiTransport to be deleted -->
        <input type="hidden" name="id" value="@Model.ID_paczki_transport" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
